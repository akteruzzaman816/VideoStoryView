<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.media3.ui.PlayerView
        android:id="@+id/video_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/_000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:use_controller="false" />

    <ImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/img_play"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_play_with_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/video_main"
        app:layout_constraintStart_toStartOf="@+id/video_main"
        app:layout_constraintTop_toTopOf="@+id/video_main" />

</androidx.constraintlayout.widget.ConstraintLayout>